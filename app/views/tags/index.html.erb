<h1>Listing Tags</h1>

<%= link_to 'New tag', new_tag_path %> | <%= link_to 'Go to articles', articles_path %>

<table>
  <tr>
    <th>Name</th>
    <th colspan="2"></th>
  </tr>

  <% @tags.each do |tag| %>
    <tr>
      <td><%= tag.name %></td>
      <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
      <td><%= link_to 'Destroy', tag_path(tag),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
